<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PrototypeCS408"
    tools:context=".GetStartedActivity">

    <!--    android:background="@drawable/manek_singh_unsplash">-->

    <ImageView
        android:id="@+id/background_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/manek_singh_unsplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/faded_black_bg"
        android:theme="@style/Theme.PrototypeCS408"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/in2thewok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:padding="10dp"
            android:text="Hello, Welcome to In2theWok!"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/white_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/white_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/Theme.PrototypeCS408"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/in2thewok"
            app:layout_constraintStart_toStartOf="@id/in2thewok"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/get_started_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Please enter a username to get started!"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="20sp"
                app:layout_constraintBottom_toTopOf="@+id/teUsername"
                app:layout_constraintEnd_toEndOf="@id/white_container"
                app:layout_constraintStart_toStartOf="@id/white_container"
                app:layout_constraintTop_toTopOf="@id/white_container" />

            <EditText
                android:id="@+id/teUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/btnGetStarted"
                app:layout_constraintEnd_toEndOf="@id/white_container"
                app:layout_constraintStart_toStartOf="@id/white_container"
                app:layout_constraintTop_toBottomOf="@id/get_started_label" />

            <Button
                android:id="@+id/btnGetStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                app:layout_constraintTop_toBottomOf="@id/teUsername"
                app:layout_constraintEnd_toEndOf="@id/white_container"
                app:layout_constraintStart_toStartOf="@id/white_container"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>