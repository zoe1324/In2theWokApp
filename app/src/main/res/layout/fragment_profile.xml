<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/okabe_ito_vermilion_light_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ProfileFragment">
        <LinearLayout
            android:id="@+id/llTitleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/tvFavouriteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="User Profile"
                android:textColor="@color/okabe_ito_vermilion"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvQ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favourite cooking smell:"
            android:textSize="20sp"
            android:layout_rowWeight="0"
            android:layout_columnWeight="0"
            android:padding="10dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/llTitleIcon"
            app:layout_constraintTop_toBottomOf="@id/llTitleIcon"
            app:layout_constraintBottom_toTopOf="@id/tvA1"/>

        <TextView
            android:id="@+id/tvQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favourite fruit:"
            android:textSize="20sp"
            android:padding="10dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tvA1"
            app:layout_constraintTop_toBottomOf="@id/tvA1"
            app:layout_constraintBottom_toTopOf="@id/tvA2"/>

        <TextView
            android:id="@+id/tvA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/okabe_ito_vermilion"
            android:text="-"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/tvQ1"
            app:layout_constraintTop_toBottomOf="@id/tvQ1"
            app:layout_constraintBottom_toTopOf="@id/tvQ2"/>

        <TextView
            android:id="@+id/tvA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/okabe_ito_vermilion"
            android:text="-"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/tvQ2"
            app:layout_constraintTop_toBottomOf="@id/tvQ2"
            app:layout_constraintBottom_toTopOf="@id/tvQ3"/>

        <TextView
            android:id="@+id/tvQ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favourite vegetable:"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/tvA2"
            app:layout_constraintTop_toBottomOf="@id/tvA2"
            app:layout_constraintBottom_toTopOf="@id/tvA3"/>

        <TextView
            android:id="@+id/tvQ4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favourite cuisine:"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/tvA3"
            app:layout_constraintTop_toBottomOf="@id/tvA3"
            app:layout_constraintBottom_toTopOf="@id/tvA4"/>

        <TextView
            android:id="@+id/tvA3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/okabe_ito_vermilion"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/tvQ3"
            app:layout_constraintTop_toBottomOf="@id/tvQ3"
            app:layout_constraintBottom_toTopOf="@id/tvQ4"/>

        <TextView
            android:id="@+id/tvA4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/okabe_ito_vermilion"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/tvQ4"
            app:layout_constraintTop_toBottomOf="@id/tvQ4"
            app:layout_constraintBottom_toTopOf="@id/tvPosts"/>

        <TextView
            android:id="@+id/tvPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tvA4"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>




